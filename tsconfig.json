{
    "include": [
        "./source/**/*.ts"
    ],
    "compilerOptions": {
        "target": "ES2020",
        "rootDir": "./source/",
        "outDir": "./bin/",
        "types": [
            "@types/node"
        ],
        "allowJs": true,
        "alwaysStrict": true,
        "lib": [
            "ES2020",
            "DOM"
        ],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "allowSyntheticDefaultImports": false,
        "disableReferencedProjectLoad": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "module": "ESNext",
        "declaration": true,
        "moduleResolution": "node",
        "sourceMap": false,
    }
}